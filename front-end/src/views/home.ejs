<!doctype html>
<html lang="pt-br">

<head>
    <title>Tela Home</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="../styles/style.css">
    <style>

    </style>
</head>

<body>
    <nav class="navbar azulEscuro ">
        <div class="container-fluid mx-2">
            <a class="navbar-brand fs-2 text-white" href="#">
                <img src="../images/Logo.png" alt="Logo" width="50" height="50" class="d-inline-block align-text-top">
                TagMaster
            </a>
            <div>
                <button type="button" class="btn btn-secondary text-white me-4 btn-lg"
                    onclick="abrirPopupTags(<%= JSON.stringify(tags) %>)">TAGS</button>
                <button type="button" class="btn btn-secondary text-white me-4 btn-lg"
                    onclick="abrirPopupLixeira(<%= JSON.stringify(notas) %>)">LIXEIRA</button>
            </div>
        </div>
    </nav>
    <main class="container">
        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <button class="btn bg-primary text-white fw-bold"
                    onclick="openPopupCriarNotas(<%= JSON.stringify(tags) %>)">+ Criar Nota</button>
                <div class="w-50 d-flex align-items-center">

                    <button class="btn btn-custom btn-filter me-3 d-flex align-items-center" id="ordenarNotas"
                    onclick="ordenarNotasPorData(<%= JSON.stringify(notas) %>, <%= JSON.stringify(tags) %>)">
                        Ordenar Por data
                    </button>


                    <button class="btn btn-custom btn-filter me-3 d-flex align-items-center"
                        id="openPopupFiltrarNota" onclick="openPopupFiltrarNotasPorTags(<%= JSON.stringify(notas) %>, <%= JSON.stringify(tags) %>)">Filtrar
                        <i class="bi bi-funnel"></i>
                    </button>

                    <input type="text" class="form-control text-white"
                        placeholder="Buscar termos em títulos e descrições">
                </div>
            </div>
            <table class="table table-dark table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th scope="col">Título</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Tags</th>
                        <th scope="col">Data</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody id="listaNotas">

                </tbody>
            </table>
        </div>

    </main>
    <div class="overlay" id="overlay">
        <div class="popup position-relative rounded-3 overflow-hidden">
            <h1 class="fs-1 text- azulEscuro text-white p-2 fw-bold">Lixeira</h1>
            <div class="container">
                <table class="table  table-secondary table-bordered table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Título</th>
                            <th scope="col">Descrição</th>
                            <th scope="col">Recuperar</th>

                        </tr>
                    </thead>
                    <tbody>
                            <% notasExcluidas.forEach((nota) => { %>  
                                <tr>
                                    <td><%= nota.titulo %></td>
                                    <td><%= nota.des %></td>
                                    <td>
                                        <button type="button" class="btn btn-primary"
                                            style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">
                                            Recuperar
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                    </tbody>
                    
                    
                </table>
                <button type="button" class="btn btn-danger mb-3" id="closePopup">Voltar</button>
            </div>
        </div>
    </div>


    <script>
        window.addEventListener('load', () => {
            const notas = <%- JSON.stringify(notas) %>;  // O EJS converte para um objeto válido (não como uma string)
            const tags = <%- JSON.stringify(tags) %>;

            renderizarNotas(notas, tags)
            
        });
    </script>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src="../javascript/javascript.js"></script>
</body>

</html>